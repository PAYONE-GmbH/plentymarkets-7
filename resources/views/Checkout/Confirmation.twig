<script>
    {% if success == "true" %}
    OffAmazonPayments.initConfirmationFlow("{{ sellerId }}", "{{ amazonReferenceId }}", function (confirmationFlow) {
        confirmationFlow.success();
        window.amazonLogout();
    });
    {% else %}
    OffAmazonPayments.initConfirmationFlow("{{ sellerId }}", "{{ amazonReferenceId }}", function (confirmationFlow) {
        confirmationFlow.error();
    });
    {% endif %}
</script>
